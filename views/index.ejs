<html lang="en" dir="ltr">
  <head>

    <meta charset="utf-8">
    <style>
    body{
    font-family: 'Nunito';
}

h2{
    font-size: 18px;
    padding: 10px 20px;
    color: #575ed8;
}

#mario-chat{
    max-width: 600px;
